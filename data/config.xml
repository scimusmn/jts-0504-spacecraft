<?xml version="1.0"?>
<config>

	<!-- ======== -->
	<!-- SETTINGS -->
	<!-- ======== -->
	<settings>

		<setting id="developerMode" value="false" />
		<setting id="orbitDuration" value="90" />
		<setting id="o2FillRate" value="1" />
		<setting id="o2DepletionRate" value="-1" />
		<setting id="o2UpdateRate" value="550" />
		<setting id="circulationFillRate" value="1" />
		<setting id="circulationDepletionRate" value="-1" />
		<setting id="circulationUpdateRate" value="100" />

	</settings>

	<!-- ======== -->
	<!-- LANGUAGE -->
	<!-- ======== -->
	<component id="powering_space_craft">

		<!-- Power Supply Window -->
		<window id="window_power">

			<text id="power_supply">
				<en>POWER SUPPLY</en>
				<es>Suministro de energía</es>
			</text>

			<text id="solar">
				<en>SOLAR:</en>
				<es>SOLAR:</es>
			</text>

			<text id="available">
				<en>AVAILABLE</en>
				<es>DISPONIBLE</es>
			</text>

			<text id="unavailable">
				<en>NOT AVAILABLE</en>
				<es>No está disponible</es>
			</text>

			<text id="batteries">
				<en>BATTERIES</en>
				<es><![CDATA[Baterías]]></es>
			</text>

		</window>

		<!-- Instructions Window -->
		<window id="window_instructions">

			<text id="instructions_headline">
				<en>YOUR MISSION:</en>
				<es>Tu misión:</es>
			</text>

			<text id="instructions_subhead">
				<en><![CDATA[Stay alive. Manage your space station’s power and maintain life-support levels.]]></en>
				<es><![CDATA[<span class="smaller">Mantenerte vivo. Administra la energía de tu estación espacial y mantén los niveles de soporte vital.</span>]]></es>
			</text>

			<text id="tip_1">
				<en><![CDATA[To succeed, keep electricity flowing to critical equipment from either the solar panels or the station’s battery.]]></en>
				<es><![CDATA[Para lograrlo, mantén la electricidad fluyendo hacia los equipos que son fundamentales, ya sea de los paneles solares o de la batería de la estación.]]></es>
			</text>

		</window>

		<!-- Life Support Window -->
		<window id="window_life_support">

			<text id="life_support_equipment">
				<en><![CDATA[LIFE-SUPPORT EQUIPMENT]]></en>
				<es>Niveles de soporte vital</es>
			</text>

			<text id="oxygen_generator">
				<en>OXYGEN GENERATOR</en>
				<es>Generador de oxígeno</es>
			</text>

			<text id="o2_level">
				<en><![CDATA[O<sub>2</sub> LEVEL]]></en>
				<es><![CDATA[Nivel de O<sub>2</sub>]]></es>
			</text>

			<text id="fan">
				<en>FAN</en>
				<es>Ventilador</es>
			</text>

			<text id="circulation">
				<en>CIRCULATION</en>
				<es>Circulación</es>
			</text>

			<text id="circulation_feedback_poor">
				<en>POOR</en>
				<es>MALA</es>
			</text>

			<text id="circulation_feedback_good">
				<en>GOOD</en>
				<es>BUENA</es>
			</text>

			<text id="circulation_feedback_excellent">
				<en>EXCELLENT</en>
				<es>EXCELENTE</es>
			</text>

		</window>

		<!-- Auxillary Window -->
		<window id="window_auxillary">

			<text id="auxillary_equipment">
				<en>AUXILIARY EQUIPMENT</en>
				<es>Equipo auxiliar</es>
			</text>

			<text id="growing_food">
				<en>GROWING FOOD</en>
				<es>Cultivo de alimentos</es>
			</text>

			<text id="communication">
				<en>COMMUNICATION</en>
				<es>Comunicaciones</es>
			</text>

			<text id="heat_to_cook">
				<en>HEAT TO COOK</en>
				<es>Calor para cocinar</es>
			</text>

			<text id="interior_lights">
				<en>INTERIOR LIGHTS</en>
				<es>Luces interiores</es>
			</text>

		</window>

		<!-- Alerts and Pop-up Messages -->
		<alerts id="alerts">

			<text id="popup_dead_header">
				<en><![CDATA[Life support failure!]]></en>
				<es><![CDATA[<span class="smaller">¡Hay una falla en el sistema de soporte vital!<span>]]></es>
			</text>

			<text id="popup_dead_sub">
				<en><![CDATA[ ]]></en>
				<es> </es>
			</text>

			<text id="batteries_depleted">
				<en><![CDATA[<br/>Your batteries are completely drained! Turn off some equipment so they can recharge.]]></en>
				<es><![CDATA[<br/>¡Las baterías están completamente descargadas! Apaga algunos de los equipos para que puedan recargarse.]]></es>
			</text>

			<text id="oxygen_depleted">
				<en><![CDATA[Turn on the oxygen!]]></en>
				<es>¡Enciende el oxígeno!</es>
			</text>

			<text id="circulation_depleted">
				<en>Turn on the fan before you suffocate.</en>
				<es>Enciende el ventilador antes de que te asfixies.</es>
			</text>

			<text id="food_warning">
				<en>Keep your plants alive.</en>
				<es>Mantén tus plantas vivas.</es>
			</text>

			<text id="comm_warning">
				<en>Don’t forget to check in with mission control.</en>
				<es>No olvides ponerte en contacto con el centro de control.</es>
			</text>

			<text id="heat_warning">
				<en>Time for a hot meal.</en>
				<es>Es hora de una comida caliente.</es>
			</text>

			<text id="lights_warning">
				<en>It's dark! Turn on the lights.</en>
				<es>¡Está oscuro! Enciende las luces.</es>
			</text>

		</alerts>

	</component>

</config>